<!DOCTYPE html>
<html lang="en">
<head>
    <%-include("./partials/head") %>
    <title>homepage</title>
</head>
<body>
    <%-include("./partials/nav") %>
    <%=JSON.stringify(user) %>
    <div class="container mt-3 row row-cols-4">
        <% blogs.forEach(blog => { %>
            <div class="col">
            <div class="card col" style="width: 18rem;">
                <p>Image URL: <%= blog.coverImageURL %></p>
                <img src="<%=blog.coverImageURL %>" class="card-img-top">
                <div class="card-body">
                  <h5 class="card-title"><%=blog.title%></h5>
                  <a href="http://localhost:<%= PORT %>/blog/<%= blog._id %>" class="btn btn-primary">View</a>
                  </div>
                </div>
              </div>
         
        <% }) %>
    </div>

    <%-include("./partials/scripts") %>

</body>
</html>