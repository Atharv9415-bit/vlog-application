<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head") %>
    <title>homepage</title>
</head>
<body>
    <%- include("./partials/nav") %>
    <%= JSON.stringify(user) %>

    <div class="container mt-3 row row-cols-4">
        <% if (blogs && blogs.length) { %>
          <% blogs.forEach(blog => { %>
            <div class="col">
              <div class="card col" style="width: 18rem;">
                <p>Image URL: <%= blog.coverImageURL %></p>
                <img src="<%= blog.coverImageURL%>" class="card-img-top" alt="Blog Image">
                <div class="card-body">
                  <h5 class="card-title"><%= blog.title %></h5>
                  <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
                </div>
              </div>
            </div>
          <% }) %>
        <% } else { %>
          <p>No blogs found.</p>
        <% } %>
    </div>

    <%- include("./partials/scripts") %>
</body>
</html>
